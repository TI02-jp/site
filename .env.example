FLASK_ENV=
DEBUG=
PORT=

# URL de conexão com o MySQL
SQLALCHEMY_DATABASE_URI=

# Variáveis de ambiente para a conexão com o MySQL
DB_HOST=
DB_USER=
DB_PASSWORD=
DB_NAME=

# Chave secreta para proteger sessões e CSRF no Flask
SECRET_KEY=

# Chave de criptografia AES-256 para senhas de terceiros (Consultorias, Cadastros)
# Gere uma nova chave executando: python -m app.utils.encryption
# IMPORTANTE: Guarde esta chave com segurança! Se perdê-la, não poderá descriptografar as senhas
ENCRYPTION_KEY=

# Chave para a API de autenticação
ACESSORIAS_API_TOKEN=
# Token dedicado para a rota /deliveries (usa ACESSORIAS_API_TOKEN/ACESSORIAS_TOKEN se vazio)
ACESSORIAS_DELIVERIES_TOKEN=

# Habilita redirecionamento e cookies seguros via HTTPS quando igual a 1
ENFORCE_HTTPS=

# Credenciais para login com Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# URL de redirecionamento autorizada pelo Google
GOOGLE_REDIRECT_URI=

# Caminho para o arquivo JSON da service account usada no calendário da sala
GOOGLE_SERVICE_ACCOUNT_FILE=

# E-mail da conta da sala de reuniões
GOOGLE_MEETING_ROOM_EMAIL=

# Configurações do Google Drive para upload de PDFs do inventário
# Caminho para o arquivo JSON de credenciais da Service Account do Google Drive
GOOGLE_DRIVE_CREDENTIALS=
# ID da pasta do Google Drive onde os PDFs do inventário serão salvos
GOOGLE_DRIVE_FOLDER_ID=

# Chaves VAPID para Web Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_CLAIMS_EMAIL=

# Cache TTLs (segundos)
SETORES_CACHE_TIMEOUT=
CONSULTORIAS_CACHE_TIMEOUT=
COURSETAGS_CACHE_TIMEOUT=
NOTIFICATION_COUNT_CACHE_TIMEOUT=
PORTAL_STATS_CACHE_TIMEOUT=

# VersÇðo exibida no portal/PWA (opcional)
APP_VERSION=
PWA_VERSION=

API_KEY=

# =============================================================================
# CONFIGURAÇÃO DE OTIMIZAÇÃO DE PERFORMANCE
# =============================================================================

# Feature flag para usar assets minificados (CSS/JS)
# Valores: true | false
# Antes de habilitar, execute: python build_assets.py
USE_MINIFIED_ASSETS=

# Feature flag para habilitar eager loading de relacionamentos
# Valores: true | false
# Melhora performance reduzindo N+1 queries
ENABLE_EAGER_LOADING=

# Feature flag para habilitar cache de queries
# Valores: true | false
# Requer Redis configurado
ENABLE_QUERY_CACHE=

# URL do Redis para cache distribuído
# Exemplo: redis://localhost:6379/0
# Se não configurado, usa SimpleCache (in-memory)
REDIS_URL=

# Timeout padrão do cache em segundos
CACHE_DEFAULT_TIMEOUT=

# Prefixo das chaves de cache
CACHE_KEY_PREFIX=

# Pool de conexões do banco de dados (otimização de performance)
DB_POOL_SIZE=
DB_MAX_OVERFLOW=
DB_POOL_TIMEOUT=
DB_POOL_RECYCLE=

# Configuração do servidor Waitress
WAITRESS_PORT=
WAITRESS_THREADS=
WAITRESS_CONNECTION_LIMIT=
WAITRESS_CHANNEL_TIMEOUT=

# Threshold para log de requisições lentas (ms)
SLOW_REQUEST_THRESHOLD_MS=